<script>
  $(document).ready(function(){$('#select2').select2(); });

  function selectedUser()
  {
    var obj = document.getElementById("select2");
    var id = obj.options[obj.selectedIndex].value;
    document.getElementById("text").innerHTML = "<h3>" + id + "</h3>";
  }
</script>

<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@group.errors.count, "error") %> prohibited this group from being saved:</h2>

      <ul>
      <% @group.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <h3><%= f.label :"グループ名" %></h3>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-6">
      <h3><%= f.label :"グループメンバー" %></h3>
      <div class="well">
        <h5>選択したメンバー</h5><br>
        <div id = text></div>

      </div>
      <select id="select2" onChange="selectedUser()">
        <% @users.each do |user| %>
          <option value="<%= user.id %>"><%= user.email %></option>
        <% end %>
      </select>
    </div>
  </div>
  <br>

  <div class="row">
    <div class="col-md-6">
      <%= f.submit "作成", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
