<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
      <h1><%= @note.title %></h1>
  </div>
  <div class="col-md-6">
      <h3><%= @note.date.strftime('%Y-%m-%d %H:%M') %></h3>
  </div>
  <div class="col-md-12">
    <div class="well">
      <%= @note.body.html_safe %>
    </div>
  </div>
</div>
<%= link_to 'Edit', edit_note_path(@note) %> |
<%= link_to 'Back', notes_path %>
