<p id="notice"><%= notice %></p>

<h1><%= image_tag(@profile.avatar_url, :size => "60", :class => "img-circle") %> <%= @profile.name %></h1>
<div class = "row">
  <div class = "col-md-4">
    <div class = "panel panel-primary">
      <div class = "panel-heading">名前</div>
      <div class = "panel-body">
        <%= @profile.name %>
      </div>
    </div>
  </div>
</div>

<div class = "row">
  <div class = "col-md-4">
    <div class = "panel panel-primary">
      <div class = "panel-heading">所属グループ</div>
      <div class = "panel-body">
        <% @groups.each do |group| %>
          <%= link_to group.name, group_path(:id => group.id) %><br>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
